<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake Game" Width="400" Height="400"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 游戏区域 -->
        <Canvas Grid.Row="0" x:Name="gameCanvas" Background="Black" />

        <!-- 分数显示 -->
        <TextBlock Grid.Row="1" x:Name="scoreText" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" />

    </Grid>
</Window>